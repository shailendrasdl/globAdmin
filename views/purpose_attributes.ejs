<!-- Header -->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home"></i>
            <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">  Purpose Attributes </li>
    </ol>

    <h3>Purpose Attributes</h3>
    <div class="row clearfix">
        <div class="col-md-4">
            <form action="/purposeAttributes" method="post">
                <div class="pro-section">
                    <h6 class="user-title">Add Attributes</h6>
                    <div class="user-body">
                        <div class="form-group">
                            <label>Purpose</label>
                            <input type="text" name="purpose" id="purpose" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Add New</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="table-responsive userBody">
                    <table class="table realestate_table" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                               <th> Purpose </th>
                                <th> Status</th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th> Purpose </th>
                                <th> Status</th>
                                <th> Action </th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <%
                                if(purpose_result != '')
                                {
                                    for(var i=0; i < purpose_result.length; i++)
                                    {
                                        %>
                                            <tr>
                                                <td><%= purpose_result[i].purpose %></td>
                                                <td>
                                                    <%
                                                        if(purpose_result[i].status == true)
                                                        {
                                                            %>
                                                                Active
                                                            <%
                                                        }
                                                        else
                                                        {
                                                            %>
                                                                Inactive
                                                            <%
                                                        }
                                                    %>
                                                </td>
                                                <td>
                                                    <a href="/editPurpose/<%= purpose_result[i]._id %>" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-edit text-white"></i>&nbsp;&nbsp;Edit
                                                    </a>
                                                    &nbsp;	
                                                    <a class="btn btn-danger btn-sm text-white" onClick="removeDetails('remove_purpose','<%= purpose_result[i]._id %>')" ><i class="fas fa-trash text-white" style="cursor:pointer"></i>&nbsp;&nbsp;Delete</a> 
                                                </td>
                                            </tr>
                                        <%     
                                    }
                                }
                            %>
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer -->
<% include templates/footer.ejs %>   