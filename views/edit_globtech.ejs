<!-- Header -->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home"></i>
            <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Globtech edit</li>
    </ol>
    <div class="row">
        <div class="col-md-12 column">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit Globtech details </h3> 
                </div>
                <form action="/editGlobtech/<%= editglobtech._id %>" method="post">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label>Keywords</label>
                            <input type="text" name="keywords" id="keywords" value="<%= editglobtech.keywords %>" class="form-control">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Description </label>
                            <textarea name="description" rows="4" value="<%= editglobtech.description %>" id="description" class="form-control"><%= editglobtech.description %></textarea>												
                        </div>
 
                        <div class="form-group col-md-4">
                            <label>Address </label>
                            <textarea name="address" rows="4" value="<%= editglobtech.address %>" id="address" class="form-control"><%= editglobtech.address %></textarea>												
                        </div>
                    </div>
                    <h6>FEATURES</h6>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label>Make</label>
                            <input type="text" name="make" id="make" value="<%= editglobtech.make %>" class="form-control">
                        </div>
                     
                        <div class="form-group col-md-4">
                            <label>Price</label>
                            <input type="text" name="price" id="price" value="<%= editglobtech.price %>" class="form-control">
                        </div>

                        <div class="form-group col-md-4">
                            <label>Location</label>
                            <input type="text" name="location" id="location" value="<%= editglobtech.location %>" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-5">
                            <div class="input text">
                                <button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
                                <a href="/globtech" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<% include templates/footer.ejs %>