<!-- Header -->
<% include templates/header.ejs %>
<!-- Sidebar -->
<% include templates/sidebar.ejs %>
    <div class="container-fluid">
		<!-- Breadcrumbs-->
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="/dashboard">Dashboard</a>
			</li>
			<li class="breadcrumb-item active"><%= editadmin_details.username %></li>
		</ol>

		<div class="row">				
			<div class="col-md-12 column">				
				<div class="box box-primary">
					<div class="box-header">
						<h3 class="box-title">Edit Admin details</h3> 
					</div>							
					<form action="/editdetails/<%= editadmin_details._id %>" method="post">
						<div class="box-body">
							<div class="row">	
								<div class="form-group col-md-6">
									<label>Username</label>
									<input type="text" readonly value="<%= editadmin_details.username %>" required id="username" class="form-control">
								</div>
								<div class="form-group col-md-6">
									<label>Email</label>
									<input type="text" readonly value="<%= editadmin_details.email %>" required class="form-control">
								</div>
							</div>
							<div class="row">
								<div class="form-group col-md-12">
									<%
										var assignrole = editadmin_details.role;
										if(assignrole)
										{
											if(assignrole.includes('Admin'))
											{
												%>
													<label>
														<input type="checkbox" checked name="role" value="Admin"> Admin
													</label> &nbsp;&nbsp;&nbsp;&nbsp;
												<%
											}
											else
											{
												%>
													<label>
														<input type="checkbox" name="role" value="Admin"> Admin
													</label> &nbsp;&nbsp;&nbsp;&nbsp;
												<%
											}
											if(assignrole.includes('User'))
											{
												%>
													<label><input type="checkbox" checked name="role" value="Marketer"> User</label> &nbsp;&nbsp;&nbsp;&nbsp;
												<%
											}
											else
											{
												%>
													<label><input type="checkbox" name="role" value="User"> User</label> &nbsp;&nbsp;&nbsp;&nbsp;
												<%
											}
											
											
											if(assignrole.includes('Sellers'))
											{
												%>
													<label><input type="checkbox" checked name="role" value="Sellers">Sellers</label>
												<%
											}
											else
											{
												%>
													<label><input type="checkbox" name="role" value="Sellers">Sellers</label>
												<%
											}
										}
										else
										{
											%>
												<label><input type="checkbox" name="role" value="Admin"> Admin</label> &nbsp;&nbsp;&nbsp;&nbsp;
												<label><input type="checkbox" name="role" value="User"> User</label> &nbsp;&nbsp;&nbsp;&nbsp;
											<%
										}
									%>																														
								</div>
							</div>
							<div class="row">
								<div class="form-group col-md-5">
									<div class="input text">
										<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- /.container-fluid -->
<!-- Footer -->
<% include templates/footer.ejs %>        