<!-- Header -->
<% include templates/header.ejs %>
<!-- Sidebar -->
<% include templates/sidebar.ejs %>
    <div class="container-fluid">
		<!-- Breadcrumbs-->
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="/">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Access role</li>
		</ol>

		<div class="card mb-3">
			<div class="card-header">
				<div class="row">
					<div class="col-md-10">
						<i class="fas fa-table"></i> Admin List
					</div>
					<div class="col-md-2">
						<a href="/register" class="btn btn-primary btn-block" title="Sub-Admin">Add New</a>
					</div>
				</div>					
			</div>
			<div class="userBody">
				<div class="table-responsive admin_table">
					<table class="table" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>Username</th>
								<th>Email</th>
								<th>Role</th>
								<th>Action</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>Username</th>
								<th>Email</th>
								<th>Role</th>
								<th>Action</th>
							</tr>
						</tfoot>
						<tbody>
							<%
								if(admins_list != '')
								{
									for(var i=0; i < admins_list.length; i++)
									{
										var j=0;
										%>
											<tr>
												<td><%= admins_list[i].username %></td>
												<td><%= admins_list[i].email %></td>																										
												<td>
													<%
														if(admins_list[i].role)
														{
															%>
																<%= admins_list[i].role %>																								
															<%
														}
													%>
												</td>		
												<td>
													<!-- <a href="/editdetails/<%= admins_list[i]._id %>">
														<i class="fas fa-edit text-info"></i>
													</a> -->
													<a href="/editdetails/<%= admins_list[i]._id %>" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-edit text-white"></i>&nbsp;&nbsp;Edit
                                                    </a>
													&nbsp;
													<a class="btn btn-danger btn-sm text-white" onClick="removeDetails('removeadmin','<%= admins_list[i]._id %>')" ><i class="fas fa-trash text-white" style="cursor:pointer"></i>&nbsp;&nbsp;Delete</a> 														
													<!-- <i class="fas fa-trash text-danger" onClick="removeDetails('removeadmin','<%= admins_list[i]._id %>')" style="cursor:pointer"></i> -->
												</td>
											</tr>
										<%											
									}
								}
							%>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		
	</div>
	<!-- /.container-fluid -->
<!-- Footer -->
<% include templates/footer.ejs %>
